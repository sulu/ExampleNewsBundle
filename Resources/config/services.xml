<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="example_news.admin" class="Example\NewsBundle\Admin\NewsAdmin">
            <argument>%sulu_admin.name%</argument>

            <tag name="sulu.admin"/>
        </service>

        <service id="example_news.manager" class="Example\NewsBundle\News\NewsManager">
            <argument type="service" id="doctrine.orm.entity_manager"/>
        </service>

        <service id="example_news.content.news" class="Example\NewsBundle\Content\Types\NewsSelectionContentType">
            <argument>%example_news.content-type.news.template%</argument>
            <argument type="service" id="example_news.manager" />
            <argument type="service" id="serializer" />

            <tag name="sulu.content.type" alias="news"/>
        </service>
    </services>
</container>
